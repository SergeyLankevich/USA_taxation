def single_parent():
    pass

income = input('Введите выш годовой доход: ')
while True:
    try:
        income = int(income)
    except ValueError:
        income = input('Пожалуйста, введите Ваш ежегодный доход корректно (целое число): ')
    else:
        break


tax_deductions = input('Введите чему равны ваши налоговые вычеты: ')
while True:
    try:
        tax_deductions = int(tax_deductions)
    except ValueError:
        tax_deductions = input('Пожалуйста, введите Ваши налоговые вычеты корректно (целое число): ')
    else:
        break

print('Выберите катергорию из предложенных:')
print('1. Один субьект.')
print('2. Супружеская пара.')
print('3. Родитель одиночка.')

category = input()
while True:
    while True:
        try:
            category = int(category)
        except ValueError:
            category = input('Пожалуйста, выберите категорию из предложенных: ')
        else:
            break
    if category != 1 and category != 2 and category != 3:
        category = input('Пожалуйста, выберите категорию из предложенных: ')
    else: break


if category == 1:
    print('Вы должны заплатить налог на доходы физических лиц в размере', single_subject(income - tax_deductions))
elif category == 2:
    print('Вы должны заплатить налог на доходы физических лиц в размере', couple(income - tax_deductions))
elif category == 3:
    print('Вы должны заплатить налог на доходы физических лиц в размере', single_subject(income - tax_deductions))
